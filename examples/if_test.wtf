// Test if statements and comparison operators

int x = 10;
int y = 5;

print("x = ", x);
print("y = ", y);

// Basic if statement
if (x > y) {
    print("x is greater than y");
}

// If-else statement
if (x < y) {
    print("x is less than y");
} else {
    print("x is not less than y");
}

// Else-if statement
if (x == 5) {
    print("x equals 5");
} else if (x == 10) {
    print("x equals 10");
} else {
    print("x is neither 5 nor 10");
}

// Comparison operators
bool eq = x == 10;
bool neq = x != y;
bool lt = x < y;
bool lte = x <= y;
bool gt = x > y;
bool gte = x >= y;

print("x == 10: ", eq);
print("x != y:  ", neq);
print("x < y:   ", lt);
print("x <= y:  ", lte);
print("x > y:   ", gt);
print("x >= y:  ", gte);

// ifrand statement (50% chance)
print("\nTesting ifrand (50% chance):");
ifrand {
    print("This message appears randomly (50% chance)");
}

// ifrand with custom probability (90% chance)
print("\nTesting ifrand with 0.9 probability:");
ifrand(0.9) {
    print("This message appears 90% of the time");
}

// ifrand with custom probability (10% chance)
print("\nTesting ifrand with 0.1 probability:");
ifrand(0.1) {
    print("This message appears 10% of the time");
}

// ifrand with else
print("\nTesting ifrand with else:");
ifrand(0.5) {
    print("Random: True branch");
} else {
    print("Random: False branch");
}
//ifrand with else if
ifrand(0.3) {
    print("Random: 30% branch");
} else ifrand(0.6) {
    print("Random: 60% branch");
} else {
    print("Random: Else branch");
}

// Nested if statements
print("\nTesting nested if:");
int a = 15;
if (a > 10) {
    print("a is greater than 10");
    if (a > 20) {
        print("a is also greater than 20");
    } else {
        print("but a is not greater than 20");
    }
}
